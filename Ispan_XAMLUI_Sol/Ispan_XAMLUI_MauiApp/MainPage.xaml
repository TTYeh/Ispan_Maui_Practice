                FontSize="32"
                FontAttributes="Bold"
                TextColor="Black"/>
        </StackLayout>
        <StackLayout
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        Background="#BEBEBE"
        Orientation="Vertical">
            <Label 
                myNamespace:Name="lebelTest"
                Background="#BEBEBE"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="StartAndExpand"
                Text="第一行"
                FontSize="32"
                TextColor="Black"/>
            <Button 
                Background="#BEBEBE"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="StartAndExpand"
                Text="第二行"
                FontSize="32"
                TextColor="Black"/>
            <Button 
                Background="#BEBEBE"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="StartAndExpand"
                Text="第三行"
                FontSize="32"
                TextColor="Black"/>
            <Button 
                Background="#BEBEBE"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="StartAndExpand"
                Text="第四行"
                FontSize="32"
                TextColor="Black"/>


        </StackLayout>
    </StackLayout>
